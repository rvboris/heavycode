      h1, h2
        font-family 'Barnaul-Italic'
      h1
        display inline-block
        background #D6F233
        color #000
        padding 20px
        font-size 3.1em
      h2
        display inline-block
        font-size 1.5em
        padding-left 20px

        @media media-phone
          padding 20px 0 0 0
        @media media-tablet
          padding 20px 0 0 20px

    .contact-icons
      margin 100px auto 0 auto !important
